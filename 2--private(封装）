/*
	private 私有
	隐藏对象的属性和实现细节，仅对外提供访问方式。
	原则：
		把属性都隐藏提供公共方法对其访问。
*/

import java.util.Scanner;

public class $$$ {
    public static void main(String[] args){
        Man man = new Man();
  //      System.out.println(man.maney);     //error: maney为私有类型，无法访问
        Scanner input = new Scanner(System.in);
        System.out.println("请输入红包金额：");
        int hongbao = input.nextInt();
        man.addManey(hongbao);
        System.out.println(man.getManey());
        }
}
class Man{
   private int maney = 1000;
   public int getManey(){          //在同类中私有类型变量不受控
       return maney;
   }
   public int addManey(int num){          //私有类型变量只能从函数中修改
       maney = maney + num ;
       return maney;
   }
}
